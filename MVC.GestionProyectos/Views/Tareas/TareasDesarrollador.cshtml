@model IEnumerable<ModelosOrganizacion.ColaboradorTarea>

@{
    ViewData["Title"] = "TareasDesarrollador";
}

<h1>TareasDesarrollador</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TareaProyecto.Tarea.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TareaProyecto.Tarea.Funcionalidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Any())
        {
            <div class="alert alert-warning text-center">No se encontraron tareas para desarrollar</div>

        }else{
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TareaProyecto.Tarea.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TareaProyecto.Tarea.Funcionalidad)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        }
        
    </tbody>
</table>
